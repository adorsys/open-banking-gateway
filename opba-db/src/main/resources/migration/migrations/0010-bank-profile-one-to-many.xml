<databaseChangeLog logicalFilePath="db.changelog-1.0.xml" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="vbeex@adorsys.com.ua" id="2021-07-28-13">
        <comment>Added bank profile uuid column</comment>
        <addColumn tableName="${table-prefix}bank_profile">
            <column name="uuid" type="UUID"/>
        </addColumn>
        <sql>
            UPDATE ${table-prefix}bank_profile SET uuid = uuid(bank_uuid);
        </sql>
    </changeSet>

</databaseChangeLog>

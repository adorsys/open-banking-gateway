            </column>
            <column name="keystore" type="BLOB"/>
            <column name="pub_keys" type="BLOB"/>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="modified_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

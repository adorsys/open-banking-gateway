<databaseChangeLog logicalFilePath="db.changelog-1.0.xml" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="vbeex@adorsys.com.ua" id="2019-12-02-17">
        <comment>Create initial table structure</comment>

        <createTable tableName="${table-prefix}consent">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="consent_code" type="VARCHAR(256)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createSequence sequenceName="consent_id_sequence" incrementBy="50"/>

        <createTable tableName="${table-prefix}bank_protocol">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="bank_uuid" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="action" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="protocol_bean_name" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createSequence sequenceName="bank_protocol_id_sequence" incrementBy="50"/>
        <addUniqueConstraint tableName="${table-prefix}bank_protocol" columnNames="bank_uuid,action"/>

        <createTable tableName="${table-prefix}session">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="session_type" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
            <column name="context" type="TEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="${table-prefix}session_type">
            <column name="id" type="smallint">
                <constraints primaryKey="true"/>
            </column>
            <column name="type" type="VARCHAR(32)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="details" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="session_type"
                                 baseTableName="${table-prefix}session"
                                 constraintName="fk_session_session_type"
                                 deferrable="true"
                                 initiallyDeferred="true"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="${table-prefix}session_type"/>

        <insert tableName="${table-prefix}session_type">
            <column name="id">1</column>
            <column name="type">SERVICE</column>
            <column name="details">See de.adorsys.opba.db.domain.entity.sessions.SessionTypes.SERVICE for reference</column>
        </insert>
        <insert tableName="${table-prefix}session_type">
            <column name="id">2</column>
            <column name="type">VALIDATION</column>
            <column name="details">See de.adorsys.opba.db.domain.entity.sessions.SessionTypes.VALIDATION</column>
        </insert>
        <insert tableName="${table-prefix}session_type">
            <column name="id">3</column>
            <column name="type">AUTHENTICATION</column>
            <column name="details">See de.adorsys.opba.db.domain.entity.sessions.SessionTypes.AUTHENTICATION</column>
        </insert>
    </changeSet>
</databaseChangeLog>
